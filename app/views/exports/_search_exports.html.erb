<form class="row g-3 border rounded mt-2 p-3">
  <%= search_form_for @q, url: exports_path  do |f| %>
    <div class="col-md-4">
      <%= f.search_field :name_cont, class: 'form-control', placeholder:"Name" %>
    </div>
    <div class="col-md-4">
      <%= f.search_field :cidade_nome_cont, class: 'form-control', placeholder: 'City' %>
    </div>
    <div class="col-md-4">
      <%= f.select :cidade_estado_id_eq, states, {:include_blank => "Select"},  class: 'form-select' %>
    </div>
    <div class="col-12">
      <%= f.submit "Search",  class:"btn btn-primary" %>
      <%= link_to  "Clear", exports_url, class: "btn btn-secondary" %>
    </div> 
  <% end %>
</form>